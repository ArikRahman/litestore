{
  "settings": {
    "mount": true,
    "directory": "admin"
  },
  "resources": {
    "/info": {
      "GET": { "auth": ["admin:server"] }
    },
    "/docs/*": {
      "POST": { "auth": ["admin:server"] },
      "PATCH": { "auth": ["admin:server"] },
      "PUT": { "auth": ["admin:server"] },
      "DELETE": { "auth": ["admin:server"] }
    },
    "/docs/wiki/*": {
      "POST": { "auth": ["admin:wiki"] },
      "PUT": { "auth": ["admin:wiki"] },
      "PATCH": { "auth": ["admin:wiki"] },
      "DELETE": { "auth": ["admin:wiki"] }
    }
  },
  "signature": "\n-----BEGIN CERTIFICATE-----\n<certificate text goes here>\n-----END CERTIFICATE-----\n"
}
