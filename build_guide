#!/usr/bin/env bash
pages=(
  md/metadata.md
  md/overview.md
    md/use-cases.md
    md/architecture.md
  md/getting-started.md
  md/usage.md
  md/admin_app.md
  md/api.md
    md/api_info.md
    md/api_dir.md
    md/api_docs.md
  md/credits.md
)
cd admin
for page in ${pages[@]}
do
  (cat "${page}"; printf "\n\n") >> LiteStore_UserGuide.md
done
hastyscribe LiteStore_UserGuide.md
rm LiteStore_UserGuide.md
mv LiteStore_UserGuide.htm ..
cd ..
