#!/usr/bin/env bash
pages=(
  md/metadata.md
  md/overview.md
    md/use-cases.md
    md/architecture.md
  md/getting-started.md
  md/usage.md
  md/api.md
  md/credits.md
)
cd admin
for page in ${pages[@]}
do
  (cat "${page}"; printf "\n\n") >> LiteStore_UserGuide.md
done
hastyscribe LiteStore_UserGuide.md
rm LiteStore_UserGuide.md
cd ..
